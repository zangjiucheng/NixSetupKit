#}


disk "/" {
        format = "%avail"
}

memory {
        format = "Memory: %available"
        threshold_degraded = "2G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
